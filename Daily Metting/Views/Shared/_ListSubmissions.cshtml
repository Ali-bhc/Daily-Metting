@{
}
<div id="container">
<div id="submissions-container">

    <partial name="_SubmissionsTable" />
    <div id="pagination-container"></div>
</div>

<script>
    $(function () {
        loadSubmissions(1);

        $("#pagination-container").on("pageChanged", function (event, data) {
            loadSubmissions(data.pageNumber);
        });
    });

    function loadSubmissions(page) {
        $.ajax({
            url: "/Member/ListSubmissions",
            type: "GET",
            data: {
                page: page
            },
            success: function (data) {
                $("#submissions-container").html(data);
            }
        });
    }
</script>
</div>